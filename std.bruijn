trit-neg [[[2]]]
trit-pos [[[1]]]
trit-zero [[[0]]]
lst [0 trit-zero [trit-neg] [trit-pos] [trit-zero]]
:test lst +0 = trit-zero
:test lst -1 = trit-neg
:test lst +1 = trit-pos
